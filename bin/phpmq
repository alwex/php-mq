if (file_exists(__DIR__.'/../vendor/autoload.php')) {
    require_once __DIR__.'/../vendor/autoload.php';
} else {
    if (file_exists(__DIR__.'/../../../autoload.php')) {
        require_once __DIR__.'/../../../autoload.php';
    }
}

use PhpMQ\Command\InitCommand;
use Symfony\Component\Console\Application;
use PhpMQ\Configuration;

// load configuration
$config = Configuration::load(__DIR__.'/../.phpmq/configuration.yml');

// start the application
$application = new Application();
$application->add(new InitCommand($config));
//$application->add(new CreateCommand());
//$application->add(new DownCommand());
//$application->add(new UpCommand());
//$application->add(new AddEnvCommand());
//$application->add(new StatusCommand());
//$application->add(new InitCommand());
$application->run();